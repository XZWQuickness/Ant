<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match"
    android:orientation="vertical">

    <include layout="@layout/top"></include>

    <com.exz.antcargo.activity.view.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rl_car_long"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/personitem"
                android:orientation="horizontal"
                android:padding="14dp">

                <TextView
                    android:id="@+id/tv_car_long"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="车长"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ed_chechang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="请输入车长"
                    android:maxLength="4"
                    android:inputType="numberDecimal"
                    android:textColor="@color/text_gray"
                    android:textColorHint="@color/text_shallow_gray"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/tv_car_xing"
                    android:text="米"
                    android:textColor="@color/text_gray"
                    android:textSize="15sp" />

            </LinearLayout>

            <include layout="@layout/gary_lin"></include>


            <LinearLayout
                android:id="@+id/rl_car_wide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/personitem"
                android:orientation="horizontal"
                android:padding="14dp">

                <TextView
                    android:id="@+id/tv_car_width"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="车宽"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ed_car_width"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="请输入车宽"
                    android:maxLength="4"
                    android:inputType="numberDecimal"
                    android:textColor="@color/text_gray"
                    android:textColorHint="@color/text_shallow_gray"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="米"
                    android:textColor="@color/text_gray"
                    android:textSize="15sp" />

            </LinearLayout>

            <include layout="@layout/gary_lin"></include>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/personitem"
                android:orientation="horizontal"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="载重"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ed_load"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="请填写载重"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:maxLength="4"
                    android:textColorHint="@color/text_shallow_gray"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/tv_car_xing"
                    android:text="吨"
                    android:textColor="@color/text_gray"
                    android:textSize="15sp" />

            </LinearLayout>

            <include layout="@layout/gary_lin"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="用车状态"
                    android:textColor="@color/text_gray"
                    android:textSize="15sp" />

                <RadioGroup
                    android:id="@+id/rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableLeft="@drawable/selector_checkbox"
                        android:text="  不限"
                        android:textColor="@color/text_gray"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rb_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:button="@null"
                        android:drawableLeft="@drawable/selector_checkbox"
                        android:text="  空车"
                        android:textColor="@color/text_gray"
                        android:textSize="14sp" />


                    <RadioButton
                        android:id="@+id/rb_03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:button="@null"
                        android:drawableLeft="@drawable/selector_checkbox"
                        android:text="  顺风车"
                        android:textColor="@color/text_gray"
                        android:textSize="14sp" />
                </RadioGroup>

            </LinearLayout>

            <View style="@style/lin"></View>

            <View
                style="@style/lin"
                android:layout_marginTop="10dp" />


            <LinearLayout style="@style/LinearLayout_horizontal">

                <TextView
                    style="@style/TextView_gray"
                    android:layout_marginLeft="4dp"
                    android:text="货物重量" />

                <EditText
                    android:id="@+id/ed_dun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="请填写货物重量(选填)"
                    android:inputType="numberDecimal"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:textColorHint="@color/text_shallow_gray"
                    android:textSize="14sp" />

                <TextView
                    style="@style/TextView_gray"
                    android:text="吨" />

            </LinearLayout>

            <View style="@style/lin" />


            <LinearLayout style="@style/LinearLayout_horizontal">

                <TextView
                    style="@style/TextView_gray"
                    android:layout_marginLeft="4dp"
                    android:text="货物体积" />

                <EditText
                    android:id="@+id/ed_fang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="请填写货物体积(选填)"
                    android:inputType="numberDecimal"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:textColorHint="@color/text_shallow_gray"
                    android:textSize="14sp" />

                <TextView
                    style="@style/TextView_gray"
                    android:text="方" />
            </LinearLayout>

            <View style="@style/lin" />


            <LinearLayout
                android:id="@+id/ll_goods_baozhuang"
                style="@style/LinearLayout_horizontal">

                <TextView
                    style="@style/TextView_gray"
                    android:layout_marginLeft="4dp"
                    android:text="货物包装" />

                <TextView
                    android:id="@+id/tv_goods_baozhaung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:maxLength="4"
                    android:hint="请填写货物名称(选填)"
                    android:textColorHint="@color/text_shallow_gray"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/next" />
            </LinearLayout>

            <View style="@style/lin" />

            <View
                style="@style/lin"
                android:layout_marginTop="10dp" />

            <LinearLayout style="@style/LinearLayout_horizontal">

                <TextView
                    style="@style/TextView_gray"
                    android:layout_marginLeft="4dp"
                    android:text="货物数量" />

                <EditText
                    android:id="@+id/ed_goods_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="请填写数量(选填)"
                    android:inputType="numberDecimal"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:textColorHint="@color/text_shallow_gray"
                    android:textSize="14sp" />
            </LinearLayout>

            <View style="@style/lin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:text="照片"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />

            <com.exz.antcargo.activity.view.NoScrollGridView
                android:id="@+id/gv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:listSelector="@null"
                android:numColumns="5"></com.exz.antcargo.activity.view.NoScrollGridView>

            <include layout="@layout/gary_lin"></include>

            <View
                style="@style/lin"
                android:layout_marginTop="10dp"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="请填写备注"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/ed_note"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:gravity="center_vertical|top"
                android:hint="请填写备注相关备注信息,仅限200字"
                android:paddingTop="10dp"
                android:textColorHint="@color/text_gray"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="15sp" />

            <View style="@style/lin"></View>
        </LinearLayout>
    </com.exz.antcargo.activity.view.MyScrollView>

    <include layout="@layout/top"></include>


</LinearLayout>