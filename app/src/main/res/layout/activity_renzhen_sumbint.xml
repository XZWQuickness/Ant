<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match"
    android:orientation="vertical">

    <include
        android:id="@+id/top"
        layout="@layout/top"

        ></include>

    <Button
        android:id="@+id/bt_xianguangguang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_red_fill"
        android:text="先逛逛"
        android:textColor="@color/white"
        android:textSize="14sp"></Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bt_xianguangguang"
        android:layout_below="@id/top"
        android:layout_centerInParent="true"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@mipmap/succeed" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="恭喜你,认证信息已提交"
                android:textColor="@color/text_gray"
                android:textSize="19sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="你的认证信息已提交成功,请耐心等\n待平台审核,审核通过后即可发布相\n关信息,并可在线联系业务"
                android:textColor="@color/text_shallow_gray"
                android:textSize="14sp" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>