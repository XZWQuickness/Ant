<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match"
    android:orientation="vertical">

    <include layout="@layout/top"></include>

    <View
        style="@style/lin"
        android:layout_marginTop="10dp" />

    <LinearLayout style="@style/LinearLayout_horizontal">

        <TextView
            style="@style/TextView_gray"
            android:layout_marginLeft="4dp"
            android:text="货物名称" />

        <EditText
            android:id="@+id/ed_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:maxLines="1"
            android:hint="请填写货物名称"
            android:textColorHint="@color/text_shallow_gray"
            android:textSize="14sp" />
    </LinearLayout>

    <View style="@style/lin" />

    <View
        style="@style/lin"
        android:layout_marginTop="10dp" />

    <LinearLayout style="@style/LinearLayout_horizontal">

        <TextView
            style="@style/TextView_gray"
            android:layout_marginLeft="4dp"
            android:text="货物重量" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:maxLines="1"
            android:maxLength="4"
            android:id="@+id/ed_dun"
            android:inputType="number"
            android:hint="请填写货物重量(选填)"
            android:textColorHint="@color/text_shallow_gray"
            android:textSize="14sp" />

        <TextView
            style="@style/TextView_gray"
            android:text="吨" />

    </LinearLayout>

    <View style="@style/lin" />

    <View
        style="@style/lin"
        android:layout_marginTop="10dp" />

    <LinearLayout style="@style/LinearLayout_horizontal">

        <TextView
            style="@style/TextView_gray"
            android:layout_marginLeft="4dp"
            android:text="货物体积" />

        <EditText
            android:id="@+id/ed_fang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请填写货物体积(选填)"
            android:maxLength="4"
            android:maxLines="1"
            android:inputType="number"
            android:textColorHint="@color/text_shallow_gray"
            android:textSize="14sp" />

        <TextView
            style="@style/TextView_gray"
            android:text="方" />
    </LinearLayout>

    <View style="@style/lin" />

    <View
        style="@style/lin"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:id="@+id/ll_goods_baozhuang"
        style="@style/LinearLayout_horizontal">

        <TextView
            style="@style/TextView_gray"
            android:layout_marginLeft="4dp"
            android:text="货物包装" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:id="@+id/tv_goods_baozhaung"
            android:hint="请填写货物名称(选填)"
            android:textColorHint="@color/text_shallow_gray"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/next" />
    </LinearLayout>

    <View style="@style/lin" />

    <View
        style="@style/lin"
        android:layout_marginTop="10dp" />

    <LinearLayout style="@style/LinearLayout_horizontal">

        <TextView
            style="@style/TextView_gray"
            android:layout_marginLeft="4dp"
            android:text="货物数量" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:inputType="number"
            android:hint="请填写数量(选填)"
            android:maxLines="1"
            android:textColorHint="@color/text_shallow_gray"
            android:textSize="14sp"
            android:id="@+id/ed_goods_num" />
    </LinearLayout>

    <View style="@style/lin" />

    <View
        style="@style/lin"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/bt_sumbint"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_login_bule_lin"
        android:gravity="center"
        android:text="确认提交"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>